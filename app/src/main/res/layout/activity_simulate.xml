<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pokemon_gradient_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="16dp"
        android:gravity="center_horizontal">

        <!-- Header con logo estilo Pokémon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pokemon_header_bg"
            android:padding="12dp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="60dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvStats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚡ ESTADÍSTICAS DE COMBATE ⚡"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="monospace"
                android:letterSpacing="0.1"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />
        </LinearLayout>

        <!-- Panel de resultado con estilo Pokédex -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pokedex_screen_bg"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="6dp">

            <!-- Indicadores LED estilo Pokédex -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/led_red"
                        android:layout_marginEnd="8dp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/led_yellow"
                        android:layout_marginEnd="8dp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/led_green" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🎮 Selecciona tu movimiento, Entrenador"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#003366"
                    android:fontFamily="monospace"
                    android:background="@drawable/screen_display_bg"
                    android:padding="12dp"
                    android:letterSpacing="0.05" />
            </LinearLayout>
        </LinearLayout>

        <!-- Botones de acción estilo Pokémon con colores temáticos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnAttack"
                android:text="⚔️ ATACAR"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_attack_bg"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:letterSpacing="0.1"
                android:elevation="4dp" />

            <Button
                android:id="@+id/btnDefend"
                android:text="🛡️ DEFENDER"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_defend_bg"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:letterSpacing="0.1"
                android:elevation="4dp" />

            <Button
                android:id="@+id/btnRun"
                android:text="🏃‍♂️ HUIR"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_run_bg"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:letterSpacing="0.1"
                android:elevation="4dp" />

            <Button
                android:id="@+id/btnHeal"
                android:text="💊 CURAR"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_heal_bg"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:letterSpacing="0.1"
                android:elevation="4dp" />

            <Button
                android:id="@+id/btnSpecialAttack"
                android:text="⚡ ATAQUE ESPECIAL"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_special_bg"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:letterSpacing="0.1"
                android:elevation="4dp" />
        </LinearLayout>

        <!-- Sección de exportar con estilo PC Pokémon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pokemon_pc_bg"
            android:padding="16dp"
            android:orientation="vertical"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="💾 EXPORTAR DATOS"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#003366"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.1" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/pokeball_mini" />
            </LinearLayout>

            <Spinner
                android:id="@+id/spinnerExportFormat"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/spinner_pokemon_bg"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btnExport"
                android:text="📤 EXPORTAR DATOS DE COMBATE"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_export_bg"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:letterSpacing="0.1"
                android:elevation="4dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>